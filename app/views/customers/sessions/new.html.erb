<div class="container mt-5">
  <div class="col-lg-8 mx-auto">
    <div class="pb-4">
      <span class="px-3 h4 bg-light text-dark">ログイン</span>
    </div>
      <div class="ml-5">
        <span class="px-3 h4 bg-light text-dark">会員の方はこちらからログイン</span>
      </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%#= render "devise/shared/error_messages", resource: resource %>
          <div class="text-center">
            <% flash.each do |message_type, message| %>
              <font color="red"><%= content_tag :div, message, class: message_type %></font>
                <% end %>
          </div>
          <div class="row ml-5">
            <div class="col-lg-4">
              <div class="py-3">
              <%= f.label :メールアドレス %><br>
              </div>
              <%= f.label :パスワード %>
            </div>

            <div class="col-lg-8">
              <div class="py-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com",class: "w-75" %><br>
              </div>
              <%= f.password_field :password, autocomplete: "current-password",class: "w-75" %><br>
              <div class="mt-4 pb-5">
              <%= f.submit "ログイン",class: "btn btn-primary w-25" %>
              </div>

            <%# if devise_mapping.rememberable? %>
              <div class="field">
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
              </div>
            <%# end %>
            </div>
          </div>
          <% end %>
        <div class="ml-5">
          <span class="px-3 h4 bg-light text-dark ">会員登録がお済みでない⽅</soan>
        </div>
    <div class="text-center">
      <div class="mt-3">
        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</div>