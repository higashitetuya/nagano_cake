<div class="container mt-5">
  <div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-11">
      <span class="px-3 h4 bg-light text-dark">管理者ログイン</span>
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%#= render "admins/shared/error_messages", resource: resource %>
  <div class="text-center">
    <% flash.each do |message_type, message| %>
      <font color="red"><%= content_tag :div, message, class: message_type %></font>
    <% end %>
  </div>
  <div class="row mt-4">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: 'w-75' %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
      <%= f.label :パスワード%>
    </div>
    <div class="col-lg-8">
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-75' %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
    </div>
    <div class="col-lg-8">
      <%= f.submit "ログイン", class: 'btn btn-primary w-25' %>
    </div>
  </div>
</div>
<%# if devise_mapping.rememberable? %>
  <div class="field">
    <%#= f.check_box :remember_me %>
    <%#= f.label :remember_me %>
  </div>
<%# end %>
<% end %>
  <%= render "admins/shared/links" %>
