<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <% if @address.errors.any? %>
        <%= @address.errors.count %>件のエラーが発生しました
        <% @address.errors.full_messages.each do |message| %>
         <div>
          <li><%= message %></li>
         </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
<div class="row mt-3">
  <div class="col-lg-1">
  </div>
  <div class="col-lg-11">
    <span class="px-3 h4 bg-light text-dark">配送先登録 / ⼀覧</span>
  </div>
</div>
<%= form_with model: @address, local:true do |f| %>
<div class="row mt-5">
  <div class="col-lg-3">
    <div class="ml-3">郵便番号(ハイフンなし)</div>
  </div>
  <div class="col-lg-7">
    <%= f.text_field :postal_code, :placeholder => "0001111" %>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="row mt-2">
  <div class="col-lg-3">
    <div class="ml-3">住所</div>
  </div>
  <div class="col-lg-9">
    <%= f.text_field :address, :placeholder => "東京都渋⾕区代々⽊神園町0-0", class: 'w-75' %>
  </div>
</div>
<div class="row mt-2">
  <div class="col-lg-3">
    <div class="ml-3">宛名</div>
  </div>
  <div class="col-lg-6">
    <%= f.text_field :name, :placeholder => "名前" %>
  </div>
  <div class="col-lg-3">
    <div class="ml-5"><%= f.submit '新規登録', class: 'btn btn-success' %></div>
  </div>
</div>
<% end %>
  <table class="table table-bordered w-75 mt-5">
    <tr class='bg-light'>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td class="align-middle"><%= address.postal_code %></td>
      <td class="align-middle"><%= address.address %></td>
      <td class="align-middle"><%= address.name %></td>
      <td><span class="ml-2"><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %></div>
      <span class="ml-2"><%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></span></td>
    </tr>
    <% end %>
  </table>
</div>