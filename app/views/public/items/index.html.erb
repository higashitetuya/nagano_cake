<p class="notice"><font color="green"><%= notice %></font></p>
  <div class="container mt-5">
   <h2><%= @search %>⼀覧<small class="text-muted">(全<%= @count %>件)</small></h2>
    <div class="row">
      <% @items.each do |items| %>
        <div class="col-md-3 border border-warning pt-5">
          <div class="text-center">
            <%= link_to item_path(items.id) do %><%= attachment_image_tag items, :image, :fill, 100, 100, format: 'jpeg' %><% end %>
          </div>
          <div class="card-body">
            <div class="text-center">
              <%= items.name %>
            </div>
              ￥<%= (items.price * 1.1).floor %>
            <% items.genre.name %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="pagination justify-content-center mt-3">
      <%= paginate @items %>
    </div>
  </div>
