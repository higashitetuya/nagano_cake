<div class="container mt-5">
  <% if flash[:notice] %>
    <p class="notice"><font color="green"><%= notice %></font></p>
  <% end %>
  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-10">
  <span class="px-3 ml-4 h3 bg-light text-dark">マイページ</span>
    </div>
    <div class="col-lg-2 mt-4">
      <h3>登録情報</h3>
    </div>
    <div class="col-lg-4 mt-4">
      <%= link_to "編集する", edit_path, class: 'btn btn-success type="button' %>
    </div>
  </div>
<table class="table table-bordered mt-3 w-75">
  <tbody>
    <tr>
      <th class="w-25 bg-light">氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="w-25 bg-light">カナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="w-25 bg-light">郵便番号</th><td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="w-25 bg-light">住所</th><td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="w-25 bg-light">電話番号</th><td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="w-25 bg-light">メールアドレス</th><td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>
  <div class="row">
    <div class="col-lg-2 mt-4">
      <h3>配送先</h3>
    </div>
    <div class="col-lg-4 mt-4">
      <%= link_to "⼀覧を⾒る", addresses_path, class: 'btn btn-primary w-50' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2 mt-4">
      <h3>注文履歴</h3>
    </div>
    <div class="col-lg-4 mt-4">
      <%= link_to "⼀覧を⾒る", orders_index_path, class: 'btn btn-primary w-50' %>
    </div>
  </div>
</div>