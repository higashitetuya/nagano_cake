<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <% if @item.errors.any? %>
        <%#= @item.errors.count %>
        <% @item.errors.full_messages.each do |message| %>
         <div>
          <li><font color="red"><%= message %></font></li>
         </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-9">
      <span class="px-3 h4 bg-light text-dark">商品編集</span>
    </div>
  </div>
<%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
  <div class="row mt-4">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-7">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td width="140">商品画像</td><td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <td>商品名</td><td><%= f.text_field :name, class: 'w-75' %></td>
          </tr>
          <tr>
            <td>商品説明</td><td><%= f.text_area :introduction,rows: 4, class: 'w-75' %></td>
          </tr>
          <tr>
            <td>ジャンル</td><td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
          </tr>
          <tr>
            <td>税抜価格</td><td><%= f.text_field :price, class: 'w-75' %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td><td><%= f.radio_button :is_active, true %><%= f.label :is_active, '販売中', value: true %>
              <span class="px-3"><%= f.radio_button :is_active, false %><%= f.label :is_active, '販売停止中', value: false %></span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="text-center">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
<% end %>
</div>
