<div class="container mt-4">
  <div class="row mt-3">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-2">
      <span class="px-3 h4 bg-light text-dark">商品一覧</span>
    </div>
    <div class="col-lg-9 text-right ">
      <%= link_to new_admin_item_path, class: 'btn btn-link' do %>
      <%= image_tag('1491254405-plusaddmoredetail_82972.ico') %>
      <% end %>
    </div>
  </div>
<table class="table mt-4 border-bottom">
  <tr class="bg-light">
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td class="align-middle"><%= item.id %></td>
    <td class="align-middle"><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
    <td class="align-middle"><%= item.price %></td>
    <td class="align-middle"><%= item.genre.name %></td>
    <td class="align-middle"><% if item.is_active %>
    <font color="green">販売中</font>
     <% else %>
    <font color="silver">販売停止中</font>
     <% end %>
    </td>
  </tr>
  <% end %>
</table>
  <div class="pagination justify-content-center mt-3">
    <%= paginate @items %>
  </div>
</div>