<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
      <% if @item.errors.any? %>
        <%#= @item.errors.count %>
        <% @item.errors.full_messages.each do |message| %>
         <div>
          <li><font color="red"><%= message %></font></li>
         </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-8">
      <span class="px-3 h4 bg-light text-dark">商品新規登録</span>
    </div>
  </div>
  <%= form_with model: @item, url: admin_item_create_path(@item.id), local:true do |f| %>
  <div class="row mt-4">
    <div class="col-lg-5">
      <div class="text-right">商品画像</div>
    </div>
    <div class="col-lg-7">
      <span class="ml-5"><%= f.attachment_field :image %></span>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-2">
      <div class="text-right pr-3">商品名</div>
    </div>
    <div class="col-lg-7">
      <span class="ml-5"><%= f.text_field :name, :placeholder => "商品名", class: 'w-50' %></span>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-5">
      <div class="text-right">商品説明</div>
    </div>
    <div class="col-lg-7">
      <span class="ml-5"><%= f.text_area :introduction, :placeholder => "商品説明",rows: 4, class: 'w-50' %></span>
    </div>
  </div>
  <div class="row mt-1">
    <div class="col-lg-5">
      <div class="text-right">ジャンル</div>
    </div>
    <div class="col-lg-7">
      <span class="ml-5"><%= collection_select(:genre, :name, Genre.all, :id, :name,{include_blank: '選択してください'}) %></span>
    </div>
  </div>
  <div class="row mt-2 ">
    <div class="col-lg-5">
      <div class="text-right">税抜価格</div>
    </div>
    <div class="col-lg-7">
      <span class="ml-5"><%= f.text_field :price, :placeholder => "0000", class: 'w-50' %>円</span>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-lg-12 text-center">
      <span class="ml-1">販売ステータス</span>
      <span class="ml-5"><%= f.radio_button :is_active, true %><%= f.label :is_active, '販売中', value: true %></span>
      <%= f.radio_button :is_active, false %><%= f.label :is_active, '販売停止中', value: false %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-6">
    </div>
    <div class="col-lg-6">
      <%= f.submit '新規登録', class: 'btn btn-success btn-lg' %>
    </div>
  </div>
  <% end %>
</div>