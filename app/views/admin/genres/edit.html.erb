<div class="container mt-5">
  <div class="row mt-3">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-11">
      <span class="px-3 h4 bg-light text-dark">ジャンル編集</span>
    </div>
  </div>
  <div class="mt-3 ml-3">
  <% if @genre.errors.any? %>
    <%#= @item.errors.count %>
    <% @genre.errors.full_messages.each do |message| %>
     <div>
      <li><font color="red"><%= message %></font></li>
     </div>
    <% end %>
  <% end %>
  </div>
  <%= form_with model: @genre, url: admin_genre_update_path(@genre.id), local:true do |f| %>
  <div class="row mt-4">
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>ジャンル名</th><td><%= f.text_field :name, :placeholder => "ジャンル名" %></td><td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-6">
    </div>
  </div>
  <% end %>
</div>
